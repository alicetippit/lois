<% include partials/header-admin %>

<content>
    <div class="container content">
        <div class="row">
            <div class="column">
                <h4>Step 3: Add New Mapping</h4>
                <form action="/mappings/<%= location_id %>/<%= svg_id %>/mapping" method="POST">
                    <div class="form-group">
                        <label for="map">Map:</label>
                        <select class="form-control" id="map" name="map" required>
                            <option value="6">Lower Level</option>
                            <option value="5">Level 1</option>
                            <option value="4">Level 2</option>
                            <option value="1">Level 3</option>
                            <option value="2">Level 4</option>
                            <option value="3">Level 5</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for"loc_info">Access Type:</label>
                        <select class="form-control" id="loc_info" name="loc_info">
                            <option value="Open Access">Open Access</option>
                            <option value="Request Access">Request Access</option>
                            <option value="North Tower - Open Access">North Tower - Open Access</option>
                            <option value="East Tower - Open Access">East Tower - Open Access</option>
                            <option value="South Tower - Open Access">South Tower - Open Access</option>
                            <small class="form-text text-muted">Choose "Open Access" for locations that patrons can access. Choose "Request Access" for closed stack locations such as Multimedia or Special Collections.</small>
                        </select>
                    </div>
                    <button class="btn btn-outline-success btn-sm float-right" type="submit">Submit</button>
                </form>
            </div>
        </div>
    </div>
</content>


<% include partials/footer %>