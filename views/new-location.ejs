<% include partials/header-admin %>

<content>
    <div class="container content">
        <div class="row">
            <div class="col">
                <h4>Step 1: Create New Location:</h4>
                <form action="/locations" method=POST>
                    <div class="form-group">
                        <label for="location_code">Code:</label>
                        <input class="form-control" type="text" id="location_code" name="location_code" required>
                        <small class="form-text text-muted">Enter the location code as it appears in Alma.</small>
                    </div>
                    <div class="form-group">
                        <label for="location_name">Name:</label>
                        <input class="form-control" type="text" id="location_name" name="location_name" required>                       
                    </div>
                    <div class="form-group">
                        <label for="library">Library:</label>
                        <select class="form-control" id="library" name="library" required>
                            <option value="Univerity">University</option>
                            <option value="Deering">Deering</option>
                        </select>
                    </div>
                    <button class="btn btn-outline-success btn-sm float-right" type="submit">Submit</button>
                </form>
            </div>
        </div>
    </div>
</content>

