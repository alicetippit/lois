<% include partials/header-admin %>

<content>
    <div class="container content">
        <div class="row">
            <div class="col-md-4"></div>
             <div class="col-md-4">
                <div class="img-overlay-wrap">
                    <img class="img-fluid mx-auto" src="/images/<%= loc_map %>">
                    <% if(loc_map == "LibraryMap_Level4.png" || loc_map == "LibraryMap_Level5.png" || loc_map == "LibraryMap_LowerLevel.png") { %>
                        <svg version="1.1" baseProfile="full" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"
                        xmlns:ev="http://www.w3.org/2001/xml-events">
                            <circle cx="<%= x_coord %>" cy="<%= y_coord %>" r="10" stroke="none" fill="blueviolet" fill-opacity=".3"/>
                            <circle cx="<%= x_coord %>" cy="<%= y_coord %>" r="7" stroke="blueviolet" fill="none" stroke-opacity=".5" stroke-width="2"/>
                            <circle cx="<%= x_coord %>" cy="<%= y_coord %>" r="3" stroke="none" fill="blueviolet" fill-opacity=".5"/>
                        </svg>
                    <% } else { %>
                        <svg version="1.1" baseProfile="full" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"
                        xmlns:ev="http://www.w3.org/2001/xml-events">
                            <circle cx="<%= x_coord %>" cy="<%= y_coord %>" r="6" stroke="none" fill="blueviolet" fill-opacity=".3"/>
                            <circle cx="<%= x_coord %>" cy="<%= y_coord %>" r="4" stroke="blueviolet" fill="none" stroke-opacity=".5"/>
                            <circle cx="<%= x_coord %>" cy="<%= y_coord %>" r="2" stroke="none" fill="blueviolet" fill-opacity=".5"/>
                        </svg>
                    <% } %>
                </div>
            </div>
            <div class="col-md-4"></div>
        </div>
        <div class="row">
            <div class="col">
                <h4>Edit Map:</h4>
                <form action="/mappings/<%= static_mapping_id %>/map?_method=PUT" method="POST">
                    <div class="form-group">
                        <select class="form-control" name="map">
                            <option value="6">Lower Level</option>
                            <option value="5">Level 1</option>
                            <option value="4">Level 2</option>
                            <option value="1">Level 3</option>
                            <option value="2">Level 4</option>
                            <option value="3">Level 5</option>
                        </select>
                    </div>
                    <button class="btn btn-outline-success btn-sm float-right" type="submit">Submit</button>
                </form>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <h4>Edit Highlight:</h4>
                <form action="/mappings/<%= static_mapping_id %>/highlight/<%= svg_id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <label for"svg_name">Name:</label>
                        <input class="form-control" type="text" name="svg_name" id="svg_name" value="<%= svg_name %>" required>
                    </div>
                    <div class="form-group">
                        <label for="x_coord">X Coordinate:</label>
                        <input class="form-control" name="x_coord" id="x_coord" value="<%= x_coord %>" required>
                    </div>
                    <div class="form-group">
                        <label for="y_coord">Y Coordinate:</label>
                        <input class="form-control" name="y_coord" id="y_coord" value="<%= y_coord %>"required>
                    </div>
                    <button class="btn btn-outline-success btn-sm float-right" type="submit">Submit</button>
                </form>
            </div>
        </div>
    </div>
</content>

<% include partials/footer %>