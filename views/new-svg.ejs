<% include partials/header-admin %>

<content>
    <div class="container content">
        <div class="row">
            <div class="col">
                <h4>Step 2: Create New Highlight:</h4>
                <form action="/mappings/<%= location_id %>/svg" method="POST">
                    <div class="form-group">
                        <label for"svg_name">Name:</label>
                        <input class="form-control" type="text" name="svg_name" id="svg_name" required>
                    </div>
                    <div class="form-group">
                        <label for="x_coord">X Coordinate:</label>
                        <input class="form-control" name="x_coord" id="x_coord" required>
                    </div>
                    <div class="form-group">
                        <label for="y_coord">Y Coordinate:</label>
                        <input class="form-control" name="y_coord" id="y_coord" required>
                    </div>
                    <button class="btn btn-outline-success btn-sm float-right" type="submit">Submit</button>
                </form>
            </div>
        </div>
    </div>
</content>

